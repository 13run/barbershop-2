<form action="/contact" method="POST">
  <div class="form-group">
    <label for="formGroupExampleInput">Name</label>
    <input name="contact[user_name]" type="text" class="form-control" id="formGroupExampleInput" placeholder="Your Name there">
  </div>
  <div class="form-group">
    <label  for="exampleFormControlTextarea1">Message</label>
    <textarea name="contact[user_message]" type="text" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Type message there"></textarea>
  </div>
  <br><button type="submit" class="btn btn-primary" >Отправить</button>
</form>
